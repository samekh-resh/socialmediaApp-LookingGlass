<!doctype html>
<html>
<head>
    <title>Looking Glass</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../profile.css">
</head>
<body>
<div class="container">

  <header class="navbar">
    <div class="container-fluid">
      <a href="/feed" class="navbar-brand">Looking Glass</a>
      <div>
        <a href="/feed">Feed</a>
        <a href="/logout">Logout</a>
      </div>
    </div>
  </header>

  <main>
    <h1>My Profile</h1>
    <div class="rounded-3 p-3">
        <h2>Create Post</h2>

        <form action="/createPost" enctype="multipart/form-data" method="POST">
            <input type="text" name="caption" placeholder="caption">
            <input type="file" name="file-to-upload" class="fileChose">
            <button type="submit">Create</button>
        </form>
    </div>

    <div>
      <% for (let i = posts.length-1; i > -1; i--) { %>
      <div class="card p-3 rounded-3">
        <div class="card-body text-center">
            <a href="/page/<%= posts[i].postedBy %>" class="username rounded-3"><%= posts[i].postedBy %></a>
        </div>

        <a href="/post/<%= posts[i]._id %>">
        <img src="<%= posts[i].img %>" alt="" class="rounded-3">
        </a>

        <div class="card-body">
            <div class="card-title">
                <span class="hidden"><%= posts[i]._id %></span>
                <span class="likes"><%= posts[i].likes %></span>
                <i class="fa fa-heart"></i>
                <% if (posts[i].postedBy.equals(user._id)) {%>
                  <i class="fa fa-trash"></i>
  
                  <% } %>
            </div>
            <p class="clear mt-5 p-2 rounded-3 text-center"><%= posts[i].caption %></p>
        </div>
      </div>
      <% } %>
    </div>

    <h1> Bookmarked Posts</h1>
        <ul class="messages">
        <% for(var i=0; i<bookmarks.length; i++) {%>
            
          <li class="message">
            
              <h4><%= bookmarks[i].caption %></h4>
              <img src="<%= bookmarks[i].img %>" alt="" class="rounded-3">
            
          </li>
        <% } %>
        </ul>
  </main>

</div>
<script src="main.js"></script>
</body>
</html>